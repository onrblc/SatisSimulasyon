@using SatisSimilasyon.Web.Models
@model LoginModel

@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Kullanıcı Giriş </title>

	<link href="/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="/Content/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
	<link href="/Content/vendors/nprogress/nprogress.css" rel="stylesheet">
	<link href="/Content/vendors/animate.css/animate.min.css" rel="stylesheet">
	<link href="/Content/build/css/custom.min.css" rel="stylesheet">
	<style>
		.form {
			margin: 20px 0;
			position: relative
		}
	</style>
</head>

<body class="login">

	<div>
		<a class="hiddenanchor" id="signup"></a>
		<a class="hiddenanchor" id="signin"></a>

		<div class="login_wrapper">
			<div class="animate form login_form login_content">
				<img src="/Content/img/SatSimLogo.png" style="width: 250px " />
				<section class="login_content">
					<div class="form">
						<h1>Kullanıcı Giriş</h1>
						@if (ViewBag.Message != null)
						{
							<div class="alert-danger">
								@ViewBag.Message
							</div>
							<br />
						}
						@using (Html.BeginForm("Login", "Home", FormMethod.Post))
						{
							<div>
								@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
							</div>
							<div>
								@Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Kullanıcı Şifre", type = "password" })
							</div>
							<div>
								<button type="submit" class="btn btn-warning" style="width:200px">Giriş</button>
							</div>
							<div class="clearfix"></div>
							<br />
						}
					</div>
				</section>
			</div>
		</div>
	</div>
</body>
</html>


